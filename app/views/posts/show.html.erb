Title: <%= @post.title %><br>
Body: <%= @post.body %><br>
Comments:<br>
<% @post.comments.each do |comment| %>
  Commenter name: <%= comment.user.name %><br>
  <%= comment.body %><br>
<% end %>
<%= simple_form_for [@post, @post.comments.build] do |f| %>
  <%= f.input :body, label: 'Comment text: ' %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.submit %>
<% end %>